      </dependency>
      <dependency>
        <groupId>org.apache.cxf</groupId>
        <artifactId>cxf-bundle-minimal</artifactId>
        <version>2.7.15</version>
      </dependency>
      <dependency>
        <groupId>org.codehaus.woodstox</groupId>
